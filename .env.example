# Server configuration
PORT=3000
NODE_ENV=development
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Database configuration
USER_DATA_DB_PATH=./data/user-data.db

# API configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Retry configuration for Anthropic API
ANTHROPIC_RETRY_MAX_ATTEMPTS=3
ANTHROPIC_RETRY_INITIAL_DELAY=1000
ANTHROPIC_RETRY_MAX_DELAY=10000
ANTHROPIC_RETRY_BACKOFF_MULTIPLIER=2

# Logging configuration
LOG_LEVEL=info
LOG_DIR=./logs
